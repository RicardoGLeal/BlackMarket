<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layoutBackgrounColor">

    <android.support.v7.widget.CardView
        android:id="@+id/item_product"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_marginTop="8dp"

        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_product_imagen"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:background="@color/cardview_light_background"
                android:src="@drawable/ic_image_black_24dp" />


                <LinearLayout
                    android:id="@+id/ignorarid1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_nameID"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Articulo"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_product_precioID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="$6,895.00"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            <ImageView
                android:paddingTop="20dp"
                android:id="@+id/item_editID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_40dp"/>
            <ImageView
                android:paddingTop="20dp"
                android:id="@+id/item_deleteID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_40dp"/>
        </LinearLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>